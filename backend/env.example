# Application
APP_NAME=Multi-Agent Incident Response
APP_VERSION=1.0.0
DEBUG=false

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/incidents
DATABASE_SYNC_URL=postgresql://postgres:postgres@postgres:5432/incidents

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Demo Service
DEMO_SERVICE_URL=http://demo_service:8001

# Prometheus/Loki (Mode 2 - optional)
PROMETHEUS_URL=http://prometheus:9090
LOKI_URL=http://loki:3100

# Data Mode: "simulated" or "prometheus_loki"
DATA_MODE=simulated

# OpenAI (optional - uses mock responses if not set)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# Detection thresholds
ERROR_RATE_THRESHOLD=0.05
LATENCY_P95_THRESHOLD_MS=1000
MEMORY_THRESHOLD_MB=500

# Agent settings
AGENT_MAX_RETRIES=2
AGENT_TIMEOUT_SECONDS=60
AGENT_RATE_LIMIT_RPM=20

